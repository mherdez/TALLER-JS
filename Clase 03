const numero = 0

if ( numero > 0) {
  console.log('mayor que cero')
} else if ( numero < 0 ) {
  console.log('menor que cero')
} else if ( numero == 0 ){
  console.log('es cero')
}

// SWITCH

const opcion = 1

switch(opcion) {
  case 1:
    // code block
    console.log('elegiste la opcion 1')
    break;
  case 2:
    // code block
    console.log('elegiste la opcion 2')
    break;
  case 3:
    // code block
    console.log('elegiste la opcion 3')
    break;
  default:
    // code block
    console.log('opcion no valida')
}


